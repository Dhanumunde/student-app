pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                git credentialsId: 'github-token', url: 'https://github.com/Dhanumunde/student-app.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t student-app .'
            }
        }

        stage('Stop Old Container') {
            steps {
                sh '''
                    docker stop student-app-container || true
                    docker rm student-app-container || true
                '''
            }
        }

        stage('Run New Container') {
            steps {
                sh 'docker run -d -p 8081:80 --name student-app-container student-app'
            }
        }
    }
}

